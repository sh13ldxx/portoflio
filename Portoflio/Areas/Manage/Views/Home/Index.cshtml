@model List<Social>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Tables</h1>
        <a asp-action="Create" asp-controller="Home" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Social</th>
                <th scope="col">Link</th>

                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Social in Model)
            {
                <tr>
                    <th scope="row">@Social.Id</th>
                    <td>@Social.Value</td>
                    <td>@Social.Key</td>
                    <td>
                        <a asp-action="Update" asp-controller="Home" asp-route-id="@Social.Id" class="btn btn-warning">Edit</a>
                        <a type="submit" asp-action="Delete" asp-controller="Home" asp-route-id="@Social.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>